<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/imageRecicler"
      android:layout_width="100dp"
      android:layout_height="70dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintTop_toBottomOf="parent"/>

  <TextView
      android:id="@+id/tituloRecicler"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginBottom="8dp"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/directorRecicler"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageRecicler"/>

  <TextView
      android:id="@+id/directorRecicler"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginBottom="12dp"
      android:textSize="15dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageRecicler"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageRecicler" />

</androidx.constraintlayout.widget.ConstraintLayout>